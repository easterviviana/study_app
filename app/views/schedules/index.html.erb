<center>
<h1>My Schedule</h1>

<table>
  <table border="1" width="60%" align=center>
    <style>
table,th,td
{
border:1px solid black;
border-collapse:collapse;
}
th,td
{
padding:5px;
}
</style>
  <thead>
    <tr>
      <th bgcolor="#00CED1">Title</th>
      <th bgcolor="#00CED1">Date</th>
      <th bgcolor="#00CED1">Task</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td bgcolor="Pink"><%= schedule.title %></td>
        <td bgcolor="Pink"><%= schedule.date %></td>
        <td bgcolor="Pink"><%= schedule.task %></td> 
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>
</center>